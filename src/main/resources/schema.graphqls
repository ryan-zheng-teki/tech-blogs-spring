type BlogCategory {
    name: String!
    subCategories: [BlogCategory]
    blogs: [BlogItem]
}

type BlogItem {
    title: String!
    summary: String!
    content: String!

}

type Query {
    categories: [BlogCategory]!
    latestBlogs(number: Int!): [BlogItem]
    blogsForCategory(categoryId: String!): [BlogItem]
}



type Mutation {
    createBlog(categoryId: String!, blogContent: String!): BlogItem!
}